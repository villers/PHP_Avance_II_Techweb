{% extends "::base.html.twig" %}

{% block body %}
    <div class="row">
        <ul class="thumbnails list-unstyled">
            {% for board in boards %}
                <li class="col-md-3">
                    <div class="thumbnail">
                        <a class="link-box" href="{{ path('board_show', { 'id': board.id }) }}">
                            <div class="caption">
                                <h2>{{ board.title }}</h2>
                                <p>{{ board.description }}</p>
                            </div>
                            <div class="modal-footer">
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                                        60%
                                    </div>
                                </div>
                                <a href="{{ path('board_edit', { 'id': board.id }) }}" class="btn btn-info btn-block">edit</a>
                            </div>
                        </a>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}